<%
    # f = form
%>

<div class="row">&nbsp;</div>
<div class="row-fluid">
    <div class="span2">
        <div class="pull-right"><%= f.label :name, "name"%></div>
    </div>
    <div class="span10">
        <%= f.text_field :name, :class=>"full", :id => "name"  %>
    </div>
</div>

<div class="row-fluid">
    <div class="span2">
        <div class="pull-right"><%= f.label :guest_name, "guest name" %></div>
    </div>
    <div class="span10">
        <%= f.email_field :email, :class=>"full", :id=>"guest_name" %>
    </div>
</div>

<div class="row-fluid">
    <div class="span1">
        <input name="steak" class="pull-left radio" id="steak" type="radio" checked="checked"/> 
    </div>
    <div class="span2">
        <label for="steak">steak</label>
    </div>
    <div class="span1">
        <input name="chicken" class="pull-left radio" id="chicken" type="radio" /> 
    </div>
    <div class="span2">
        <label for="chicken">chicken</label>
    </div>
    <div class="span1">
        <input name="veggie" class="pull-left radio" id="veggie" type="radio" /> 
    </div>
    <div class="span2">
        <label for="veggie">veggie</label>
    </div>
</div>
<div class="row">&nbsp;</div>
<div class="row-fluid">
    <button type="submit" id="sign_up" class="btn btn-primary pull-right" href="#"><%= button %></button>     
</div>